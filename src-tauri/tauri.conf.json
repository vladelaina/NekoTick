{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nekotick",
  "version": "0.1.0",
  "identifier": "com.vladelaina.nekotick",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://127.0.0.1:3000",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Nekotick",
        "width": 900,
        "height": 700,
        "minWidth": 400,
        "minHeight": 300,
        "center": true,
        "decorations": false,
        "transparent": true,
        "backgroundColor": "#00000000"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "A minimal, elegant task manager",
    "longDescription": "Nekotick is a cross-platform To-Do app with Markdown storage, Activity Heatmap, and Time Auditing features.",
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}
